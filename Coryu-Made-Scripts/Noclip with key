--[[
theres no reason for a noclip to be this complicated but why not lol, since i dont like to skid anymore
]]--

local player = game.Players.LocalPlayer
local runservice = game:GetService("RunService")
local mou = game.Players.LocalPlayer:GetMouse()
local step = runservice.Stepped
local keydowning = mou.KeyDown

local keybindstable = {
                    
    ["var"] = {
        
        noclipkey = "x"; --change hotkey here
     
    }
    
}

local settings = {

    ["boolconst"] = {

        nc = false;
    
    }
}

step:Connect(function()
    if settings["boolconst"].nc == true and player and player.Character and player.Character:FindFirstChild("Humanoid") then 
        pcall(function()
            player.Character.Torso.CanCollide = false 
            player.Character.Head.CanCollide = false
        end)
    end
end)

keydowning:Connect(function(nokey)
    if nokey == keybindstable["var"].noclipkey then 
        settings["boolconst"].nc = not settings["boolconst"].nc
    end
end)
